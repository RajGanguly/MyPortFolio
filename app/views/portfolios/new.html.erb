<h1>Create a portfolio</h1>

<%= form_for(@portfolio) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |technology| %>
      <li>
        <%= technology.label :name %>
        <%= technology.text_field :name %>
      </li>
    <% end %>  
  </ul>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>