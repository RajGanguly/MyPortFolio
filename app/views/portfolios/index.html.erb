<h1>Portfolio items</h1>

<!-- <a href="portfolios/new">Create new Item</a>
 -->
<p><%= link_to "Create a new portfolio",new_portfolio_url %></p>
<% @portfolio_items.each do |p| %>
  <p><%= link_to p.title, portfolio_url(p) %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image if !p.thumb_image.nil? %>
  <p><%= link_to "Edit portfolio", edit_portfolio_url(p) %></p>
  <p><%= link_to "Delete portfolio", portfolio_url(p) , method: :delete, data: {confirm: 'Are you sure?'} %></p>
<% end %>
